async function saveContent() { const title = document.getElementById('title').value; const desc = document.getElementById('desc').value; const image = document.getElementById('image').value; const content = { title, desc, image, date: new Date().toLocaleString('fa-IR') }; const res = await fetch('../data.json'); const data = await res.json(); data.push(content); const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' }); const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = 'data.json'; a.click(); document.getElementById('msg').innerText = 'فایل ذخیره شد. آن را در گیت‌هاب آپلود کنید.'; } 

